@model WebTechProjectUsingSchemaFirst.user
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>loginView</title>
</head>
<body>
    <div align="center">
        <form method="post">
            <table>
                <tr>
                    <td colspan="2">Login Panel</td>
                </tr>

                <tr>
                    <td>User Id</td>
                    <td> <input id="username" type="text" name="id" /> </td>
                </tr>

                <tr>
                    <td>Password</td>
                    <td> <input id="password" type="password" name="password" /> </td>
                </tr>

                <tr>
                    <td colspan="2">
                        <input id="checkbox" type="checkbox" name="remember" value="rememberme">Remember Me(1 min)
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" name="loginButton" value="Login">
                    </td>
                    <td>
                        <input type="button" name="registerButton" value="Register">
                    </td>
                </tr>
            </table>
            
        </form>
        <h3>@Html.ValidationMessageFor(model => model.LoginError, "", new { @class = "text-danger" })</h3>

    </div>
</body>
</html>
